{
  "source": "src",
  "destination": "public",
  "clean": true,
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-layouts": {
      "directory": "src/layouts"
    },
    "metalsmith-with-postcss": {
      "plugins": {
        "postcss-import": {},
        "postcss-preset-env": {
          "features": {
            "nesting-rules": true
          }
        }
      }
    },
    "metalsmith-prism": {},
    "metalsmith-clean-css": {
      "files": "src/styles/*.css"
    },
    "metalsmith-html-minifier": {}
  }
}